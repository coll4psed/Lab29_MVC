@{
    ViewData["Title"] = "Изменение информации";
}
@model Lab28_MVC.ViewModels.EditModel
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="FirstName">Введите Имя</label>
            <input required type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
        </div>
        <div class="form-group">
            <label asp-for="SecondName">Введите фамилию</label>
            <input required type="text" asp-for="SecondName" />
            <span asp-validation-for="SecondName" />
        </div>
        <div class="form-group">
            <label asp-for="Birthday">Дата рождения</label>
            <input required type="date" asp-for="Birthday"/>
            <span asp-validation-for="Birthday"/>
        </div>
        <div class="form-group">
            <label asp-for="Country">Страна</label>
            <input required type="text" asp-for="Country"/>
            <span asp-validation-for="Country"/>
        </div>
        <div class="form-group">
            <label asp-for="City">Город</label>
            <input required type="text" asp-for="City"/>
            <span asp-validation-for="City"/>
        </div>
        <div class="form-group">
            <label asp-for="IdGender">Выберите пол</label>
            @Html.RadioButton("IdGender", "1", true)
            <span>М</span>
            @Html.RadioButton("IdGender", "2")
            <span>Ж</span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить изменения" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
